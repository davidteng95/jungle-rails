<header class="page-header">
  <h1>Signup</h1>
</header>

<div>
  <%= form_for :user, url:'/users' do |form| %>

    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', type: 'email' %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.text_field :password, class: 'form-control', type: 'password' %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.text_field :password_confirmation, class: 'form-control', type: 'password' %>
    </div>

    <%= form.submit 'Create Account', class: 'btn btn-primary' %>
  <% end %>
